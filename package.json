{
  "name": "student-portal-theming",
  "version": "0.0.1",
  "description": "A custom portal theme",
  "repository": "https://github.com/InteractiveDesignAndDevelopment/student-portal-theming.git",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "run-s build:*",
    "build:scss": "run-p build:scss:*",
    "build:scss:bootstrap": "node-sass scss/bootstrap.scss out/bootstrap.css",
    "build:scss:bootstrap-custom": "node-sass scss/bootstrap_custom.scss out/bootstrap_custom.css",
    "build:scss:main": "node-sass scss/Main.scss out/Main.css",
    "postbuild": "run-s postbuild:*",
    "postbuild:post-css": "run-p postbuild:post-css:*",
    "postbuild:post-css:bootstrap": "postcss out/bootstrap.css -u autoprefixer -o out/bootstrap.css",
    "postbuild:post-css:bootstrap_custom": "postcss out/bootstrap_custom.css -u autoprefixer -o out/bootstrap_custom.css",
    "postbuild:post-css:main": "postcss out/main.css -u autoprefixer -o out/main.css",
    "postbuild:csso": "run-p postbuild:csso:*",
    "postbuild:csso:bootstrap": "csso out/bootstrap.css out/bootstrap.css",
    "postbuild:csso:bootstrap-custom": "csso out/bootstrap_custom.css out/bootstrap_custom.css",
    "postbuild:csso:main": "csso out/Main.css out/Main.css",
    "clean": "rimraf out && mkdirp out",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Interactive Design & Development",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^7.1.5",
    "csso-cli": "^1.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.2"
  }
}
