{
  "name": "student-portal-theming",
  "version": "0.0.1",
  "description": "A custom portal theme",
  "repository": "https://github.com/InteractiveDesignAndDevelopment/student-portal-theming.git",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "run-s build:*",
    "build:scss": "run-p build:scss:*",
    "build:scss:portal-bootstrap": "node-sass src/scss/portal-bootstrap.scss build/portal/Public/global/css/bootstrap.css",
    "build:scss:portal-bootstrap-custom": "node-sass src/scss/portal-bootstrap_custom.scss build/portal/Public/global/css/bootstrap_custom.css",
    "build:scss:portal-main": "node-sass src/scss/portal-Main.scss build/portal/Public/global/css/Main.css",
    "build:scss:staff-signin": "node-sass src/scss/staff-signin.scss build/staff/Styles/SignIn.css",
    "build:scss:student-bootstrap": "node-sass src/scss/student-bootstrap.scss build/student/Public/global/css/bootstrap.css",
    "build:scss:student-bootstrap-custom": "node-sass src/scss/student-bootstrap_custom.scss build/student/Public/global/css/bootstrap_custom.css",
    "build:scss:student-main": "node-sass src/scss/student-Main.scss build/student/Public/global/css/Main.css",
    "postbuild": "run-s postbuild:*",
    "postbuild:post-css": "run-p postbuild:post-css:*",
    "postbuild:post-css:portal-bootstrap": "postcss build/portal/Public/global/css/bootstrap.css -u autoprefixer postcss-csso -o build/portal/Public/global/css/bootstrap.css",
    "postbuild:post-css:portal-bootstrap_custom": "postcss build/portal/Public/global/css/bootstrap_custom.css -u autoprefixer postcss-safe-important postcss-csso -o build/portal/Public/global/css/bootstrap_custom.css",
    "postbuild:post-css:portal-main": "postcss build/portal/Public/global/css/Main.css -u autoprefixer postcss-csso -o build/portal/Public/global/css/Main.css",
    "postbuild:post-css:staff-signin": "postcss build/staff/Styles/signin.css -u autoprefixer postcss-csso -o build/staff/Styles/SignIn.css",
    "postbuild:post-css:student-bootstrap": "postcss build/student/Public/global/css/bootstrap.css -u autoprefixer postcss-csso -o build/student/Public/global/css/bootstrap.css",
    "postbuild:post-css:student-bootstrap_custom": "postcss build/student/Public/global/css/bootstrap_custom.css -u autoprefixer postcss-safe-important postcss-csso -o build/student/Public/global/css/bootstrap_custom.css",
    "postbuild:post-css:student-main": "postcss build/student/Public/global/css/Main.css -u autoprefixer postcss-csso -o build/student/Public/global/css/Main.css",
    "postbuild:copy-fonts": "copyfiles -f src/fonts/orkney/*.* build/portal/Public/global/fonts/orkney",
    "postbuild:copy-toby": "cp-file-cli src/images/toby.jpg build/student/Public/global/images/login_img1.jpg",
    "postbuild:copy-student-logo-png": "cp-file-cli src/images/mymercer.png build/student/Public/global/images/logo.png",
    "postbuild:copy-portal-logo-png": "cp-file-cli src/images/mymercer.png build/portal/Public/global/images/logo.png",
    "postbuild:copy-staff-styles-images-logo-svg": "cp-file-cli src/images/mymercer.svg build/staff/Styles/images/CampusNexus-SVG.svg",
    "postbuild:copy-staff-images-logo-svg": "cp-file-cli src/images/mymercer.svg build/staff/images/CampusNexus-SVG.svg",
    "clean": "rimraf build && mkdirp build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Interactive Design & Development",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^7.1.5",
    "copyfiles": "^1.2.0",
    "cp-file-cli": "^1.0.1",
    "csso-cli": "^1.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "postcss-csso": "^3.0.0",
    "postcss-safe-important": "^1.0.6",
    "rimraf": "^2.6.2"
  }
}
