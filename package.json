{
  "name": "portal-custom-theme",
  "version": "1.0.0",
  "description": "A custom portal theme",
  "scripts": {
    "prebuild": "run-s clean && run-s prebuild:*",
    "prebuild:create": "mkdirp out && mkdirp temp",
    "prebuild:copy": "cpy * ../temp --cwd=in",
    "prebuild:rename": "renamer --find 'temp/*.css' --replace 'temp/*.scss' --dry-run",
    "build:replace-colors-with-variables": "node replace-colors-with-variables.js",
    "build": "run-s build:*",
    "build:scss-main": "node-sass scss/Main.scss out/Main.css",
    "build:scss-bootstrap-custom": "node-sass scss/bootstrap_custom.scss out/bootstrap_custom.css",
    "clean": "rimraf out",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Interactive Design & Development",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^7.1.5",
    "cpy-cli": "^1.0.1",
    "cssnano-cli": "^1.0.5",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "renamer": "^0.6.1",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.2"
  }
}
